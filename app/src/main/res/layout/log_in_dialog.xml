<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Для того щоб мати змогу користуватись усіма перевагами даної програми а також мати можливісь вносити місця та маршрути. Вам потрібно авторизуватися"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/buttonEmailLogIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Реєстрація за допомогою електронної пошти" />

    <Button
        android:id="@+id/buttonFacebookLogIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Реєстрація за допомогою Facebook" />
</LinearLayout>